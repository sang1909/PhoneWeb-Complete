
@{
    ViewData["Title"] = "Register";
}
<br />
<h1 class="text-center">Đăng ký </h1>
    <div class="container">
        <form action="" class="was-validated">
            <div class="form-group">
                <label for="uname">Tài Khoản:</label>
                <input type="text" class="form-control" id="uname" placeholder="" name="uname" required>
                <div class="valid-feedback">Thành công</div>
                <div class="invalid-feedback">Bạn cần nhập tài khoản.</div>
            </div>
            <div class="form-group">
                <label for="pwd">Mật khẩu:</label>
                <input type="password" class="form-control" id="pwd" placeholder="" name="pswd" required>
                <div class="valid-feedback">Thành công.</div>
                <div class="invalid-feedback">Bạn cần nhập mật khẩu</div>
            </div>
            <div class="form-group">
                <label for="pwd">Nhập lại mật khẩu:</label>
                <input type="password" class="form-control" id="pwd" placeholder="" name="pswd" required>
                <div class="valid-feedback">Thành công.</div>
                <div class="invalid-feedback">Bạn cần nhập lại mật khẩu</div>
            </div>
            <div class="form-group">
                <label for="pwd">Email:</label>
                <input type="text" class="form-control" id="pwd" placeholder="" name="pswd" required>
                <div class="valid-feedback">Thành công.</div>
                <div class="invalid-feedback">Bạn cần nhập Email</div>
            </div>
            <div class="form-group">
                <label for="pwd">Số điện thoại:</label>
                <input type="text" class="form-control" id="pwd" placeholder="" name="pswd" required>
                <div class="valid-feedback">Thành công.</div>
                <div class="invalid-feedback">Bạn cần nhập số điện thoại</div>
            </div>
            <div class="form-group">
                <label for="pwd">Địa chỉ:</label>
                <input type="text" class="form-control" id="pwd" placeholder="" name="pswd" required>
                <div class="valid-feedback">Thành công.</div>
                <div class="invalid-feedback">Bạn cần nhập địa chỉ</div>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label"></label>
                <input class="form-check-input" type="checkbox" name="remember" required> Tôi đồng ý.
                <div class="valid-feedback">Thành công.</div>
                <div class="invalid-feedback">Bạn cần check</div>
            </div>
            <button type="submit" class="btn btn-primary">Đăng Ký</button>
        </form>
    </div>

