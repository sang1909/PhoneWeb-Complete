<!-- Thong so san pham -->
<div class="row">
    <div class="col-md-12">
        <div class="row" id="gradient">
            <!-- anh chinh--->
            <div class="col-md-5">
                <br />
                <img style="width:400px; height:450px" src="https://cdn.tgdd.vn/Products/Images/42/207650/nokia-72-black-400x460.png" class="img-responsive">
            </div>
            <!-- thong so noi bat + nut mua--->
            <div class="col-md-7 " id="overview">
                <br />
                <h3> Thông số nổi bật </h3>
                <div class="row">
                    <div class="col-xs-3 col-md-3 pb-product-details-fa">
                        <span class="fa fa-mobile fa-lg"></span>
                        <h4><strong>6.3"</strong></h4>
                        <p> Full HD+ (1080 x 2340 Pixels) </p>
                    </div>
                    <div class="col-xs-3 col-md-3 pb-product-details-fa">
