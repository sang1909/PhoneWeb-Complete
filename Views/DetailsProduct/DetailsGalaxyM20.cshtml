                    <div class="row">
                        <a asp-controller="Cart" asp-action="Buy" asp-route-id="@item.ProductId" class="btn btn-danger">  Thêm vào giỏ hàng </a>

                        <a type="submit" class="btn btn-info" asp-controller="Home" asp-action="Index" value="">Trở về trang chủ</a>
