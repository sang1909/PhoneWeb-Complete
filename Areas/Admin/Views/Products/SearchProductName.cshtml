@model IEnumerable<PhoneWeb.Models.Domain.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="container">
    <div class="table-wrapper">
        <h2> Tổng số sản phẩm: @Model.Count() </h2>
        <br />
        <div class="table-title">
            <div class="row">
                <div class="col-sm-5">
                    <h2>QUẢN LÝ SẢN PHẨM</h2>
                    <!-- Form search -->
                    <form method="post" enctype="multipart/form-data">
                        <div class="row no-gutters align-items-center">
                            <div class="col nav-search">
                                <!-- Input - String search name -->
                                <input class="form-control" type="text" id="searchString" name="searchString" aria-label="Text input with dropdown button">
                            </div>

                            <div class="col-auto">
                                <input asp-area="Admin" asp-controller="Products" asp-action="SearchProductName" class="btn btn-md btn-secondary" id="btnSearch" name="btnSearch" type="submit" value="Tìm kiếm" />
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-sm-7">
                    <!-- <a href="#" class="btn btn-primary"><i class="fa fa-file" aria-hidden="true"></i> Xuất báo cáo </a>-->
                    <a asp-area="Admin" asp-controller="Products" asp-action="Create" class="btn btn-primary"><i class="fa fa-plus-square" aria-hidden="true"></i> Thêm sản phẩm </a>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Tên sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Ảnh</th>
                    <th>Giá</th>
                    <th>Ngày nhập</th>
                    <th>Loại</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductId</td>
                        <td>@item.ProductName</td>
                        <td>@item.ProductQuantity</td>
                        <td><img src="~/images/@item.ProductImage" class="img-thumbnail" style="height:150px; width:150px" alt="@item.ProductName" /></td>
                        <td>@item.ProductPrice.ToString("0.00")</td>
                        <td>@item.CreateDate.ToString("dd/MM/yyyy")</td>
                        <td>@item.Category.CategoryName</td>
                        <td>
                            <div class="row">
                                <a class="btn" asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@item.ProductId"><i class="fa fa-cog" aria-hidden="true"></i>Sửa</a>
                                <a class="btn" asp-area="Admin" asp-controller="Products" asp-action="Delete" asp-route-id="@item.ProductId"><i class="fa fa-trash-o" aria-hidden="true"></i>Xoá</a>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>






